<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginRight="20dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/bluechk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/checked"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/imageblue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/hblue" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#aaffff00"
                android:text="Blue" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginRight="20dp" >

            <ImageView
                android:id="@+id/blueberrychk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/checked"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/imageblueberry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/hblueberry" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#aaffff00"
                android:text="BlueBerry" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/yellowchk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/checked"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/imageyellow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/hcrystal" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#aaffff00"
                android:text="Yellow" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/imagebackto"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:src="@drawable/backto" />
    <ImageView
        android:id="@+id/imagego"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_gravity="end|bottom"
        android:src="@drawable/go" />

    <TextView
        android:id="@+id/bestPoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:textColor="#00ff00"
        android:textSize="20dp"
        android:text="00" />

</FrameLayout>